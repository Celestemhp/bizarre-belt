<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Responsive Card Carousel</title>
  <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css">
  <style>
    .swiper-container {
      width: 100%;
      padding: 50px 0;
    }
    .swiper-slide {
      text-align: center;
      background: #fff;
      border-radius: 5px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.3);
    }
    .swiper-slide img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
}

    .swiper-slide h2 {
      margin: 20px 0;
      font-size: 24px;
    }
    .swiper-slide p {
      margin-bottom: 20px;
      font-size: 14px;
    }
  </style>
</head>
<body>
  <div class="swiper-container">
    <div class="swiper-wrapper">
      <div class="swiper-slide">
        <img src="https://tinypic.host/images/2022/12/19/img_avatar.png" alt="Card Image">
        <h2>Book Title 1</h2>
        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Doloremque, minima.</p>
      </div>
      <div class="swiper-slide">
        <img src="https://tinypic.host/images/2022/12/19/img_avatar.png" alt="Card Image">
        <h2>Book Title 2</h2>
        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Doloremque, minima.</p>
      </div>
      <div class="swiper-slide">
        <img src="https://tinypic.host/images/2022/12/19/img_avatar.png" alt="Card Image">
        <h2>Book Title 3</h2>
        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Doloremque, minima.</p>
      </div>
      <div class="swiper-slide">
        <img src="https://tinypic.host/images/2022/12/19/img_avatar.png" alt="Card Image">
        <h2>Book Title 4</h2>
        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Doloremque, minima.</p>
      </div>
      <div class="swiper-slide">
        <img src="https://tinypic.host/images/2022/12/19/img_avatar.png" alt="Card Image">
        <h2>Book Title 5</h2>
        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Doloremque, minima.</p>
      </div>
    </div>
    <div class="swiper-pagination"></div>
    <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>
  </div>

  <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
  <script>
    var swiper = new Swiper('.swiper-container', {
      slidesPerView: 1,
      spaceBetween: 30,
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },
      pagination: {
        el: '.swiper-pagination',
        clickable: true,
      },
      breakpoints: {
        640: {
          slidesPerView: 2,
          spaceBetween: 20,
        },
        768: {
          slidesPerView: 3,
          spaceBetween: 30,
        },
        1024: {
          slidesPerView: 4,
          spaceBetween: 40,
        },
      }
    });
  </script>
</body>
</html>
