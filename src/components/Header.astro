<style>

    *:focus{
    outline: none;
}

h2, h3, p {
    color: var(--white);
    text-decoration: none;
}
.banner {
    background-color: var(--darkgreen);
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding: 1px 10px 1px 10px;
    align-items: center;
}
.banner .levering {
    display: flex;
    flex-direction: row;
    gap: 5px;
    align-items: center;
}
.banner .truck {
    max-width: 40px;
    color: var(--white);
}
.banner .trustpilot {
    display: flex;
    gap: 5px;
    align-items: center;
}
.rating {
    text-align: center;
    font-size: 20px;
    }
.rating > span:before {
    content: "\2605";
    }
.full {
    color: gold; 
}
.unset {
    color: white; 
}
.mainheader {
    background-color: var(--headerblue);
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    text-align: center;
    padding: 10px 10px 10px 10px;
}

.mainheader .logo {
    Width: 140px;
}
.mainheader .searchbar {
    display: flex;
    Height: 36.55px;
    place-content: center;

}
.mainheader input[type="text"] {
    background-color: var(--white);
    border-radius: var(--globalBorderRadiusL);
    color: var(--colorPlaceholder);
    Width: 400px;
    Height: 36.55px;
    padding: 10px;
    border-style: none;
}

.mainheader .icons {
    display: flex;
    flex-direction: row;
    gap: 10px;
    align-items: center;
}
.mainheader .icons img {
    width: 28.64px;
    height: 28.64px;
}

/*************************** Navigation ************************/
.navHeader {
    width: auto;
    height: auto;
    background-color: var(--lighterblue);
    padding: 0px 10px 0px 10px;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    
}
.navHeader .navLeft {
    display: flex;
    flex-direction: row;
    gap: 10px;
    align-items: center;
    color: var(--black);
    text-decoration: none;
}
.navHeader .navLeft h2 {
    font-weight: var(--fontBold);
    color: var(--black);
    text-decoration: none;
    font-size: clamp(10px, 1.2vw, 16px);
    
}
.navHeader .navLeft 
.kategori,
.forfattere,
.aldersgrupper,
.tilbud {
    display: flex;
    flex-direction: row;
    gap: 2px;
    align-items: center;
    text-decoration: none;
}
.arrow {
    border-width: 0 3px 3px 0;
    display: inline-block;
    padding: 2px;
    border-radius: 1px;
    width: 30px;
}
.navHeader .navRight a {
    display: flex;
    flex-direction: row;
    gap: 2px;
    align-items: center;
    text-decoration: none;
}
.navHeader .navRight h2 {
    font-weight: var(--fontBold);
    font-size: var(--fontSizeDesktopMd);
    color: var(--black);
}
button {
    text-decoration: none;
    border: unset;
    background-color: unset;
    cursor: pointer;
    line-height: 18px;
    font-size: clamp(10px, 1.2vw, 16px);
}
button :hover {
    scale: 110%;
    text-decoration: underline;
}

/* Dropdown */
.dropdownContainer {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr;
    grid-auto-flow: column;
    column-gap: 20px;
    padding: 16px 0px;
    animation-duration: 0.4s;
    animation-delay: 1s;
}
.dropdownContainer .dropdown-content {
    display: flex;
    flex-direction: column;
    position: absolute;
    background-color: var(--lighterblue);
    column-gap: 20px;
    padding: 16px 0px;
    width: 100%;
    animation-duration: 0.4s;
    animation-delay: 1s;
    z-index: 10;
}
.dropdown li {
    display: block;
    text-decoration: none;
    vertical-align: bottom;
    padding-bottom: 1px;
    margin-bottom: 8px;
    cursor: pointer;
}
.dropdown ::after, ::before {
  box-sizing: border-box;
  -moz-osx-font-smoothing: grayscale;
}




