<style>
    * {
      box-sizing: border-box;
    }
    .genre-section {
      text-align: center;
    }
    @media (min-width: 300px) {
      .genre-section {
        padding: 30px;
    }
    }
    @media (min-width: 400px) {
      .genre-section {
        padding: 70px;
    }
    }
    .genre-section h2 {
      font-weight: bold;
    }

    .genre-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      /* grid-gap: 20px; */
      margin-top: 20px;
    }

    .genre-box {
      display: flex;
      justify-content: center;
      align-items: center;
      background-color: #ccc;
      height: 150px;
      padding: 10px;
      transition: background-color 0.3s ease;
    }
    .genre-box:hover {
    background-color: #333;
    scale: 102%;
    }
    .genre-box a {
      text-decoration: none;
      color: black;
    }
    .genre-box a h2 {
        font-size: var(--fontSizeDesktopMd);
    }
    .white {
      color: white;
    }
  </style>