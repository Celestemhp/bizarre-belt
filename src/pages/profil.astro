---
import Header from "../components/Header.astro";
import MainHeader from "../components/MainHeader.astro";
import Button from "../components/Button.astro";

import "../styles/aliasTellerup.css";
import "../styles/globalTellerup.css";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Profil</title>
	</head>
	<body>
		<header> 
			<Header></Header>
		</header>
		<main>
            <MainHeader title="Profil"></MainHeader>
            <section class="genre-section">
                <h2>Hej Stefan</h2>
                <p>Hvad kan vi gøre for dig i dag?</p>
                <div class="genre-grid">
                  <div class="genre-box" style="background-color: var(--lighterblue);"><a href="kategori.astro"><h2>Mine ordrer</h2></a></div>
                  <div class="genre-box" style="background-color: var(--darkvanilla);"><a href="kategori.astro"><h2>Mine bøger</h2></a></div>
                  <div class="genre-box" style="background-color: var(--royalblue);"><a href="kategori.astro"><h2 id="white">Mine oplysninger</h2></a></div>
                </div>
              </section>
              <div class="stroke"></div>           
        </main>
    </body>
</html>
<style>
     .genre-section {
        margin-top: 20px;
      text-align: center;
    }
    @media (min-width: 300px) {
      .genre-section {
        padding: 30px;
    }
    }
    @media (min-width: 400px) {
      .genre-section {
        padding: 70px;
    }
    }
    .genre-box {
      display: flex;
      justify-content: center;
      align-items: center;
      background-color: #ccc;
      height: 150px;
      padding: 10px;
    }
    .genre-box:hover {
    background-color: #333;
    scale: 102%;
    }
    .genre-section h2 {
      font-weight: bold;
      text-decoration: none;
        font-style: none;
        color: black;
    }
    .genre-box a h2 {
        font-size: var(--fontSizeDesktopMd);
    }
    .genre-box a {
        text-decoration: none;
    }
    .genre-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      grid-gap: 20px;
      margin-top: 20px;
    }
    .stroke {
    border: 0.3px solid black;
    margin-inline: 20px;
}
    #white {
    color: white;
}
</style>